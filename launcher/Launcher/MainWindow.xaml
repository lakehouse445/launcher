<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClassicCounter Launcher" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource FluentBackground}"
        FontFamily="Segoe UI Variable"
        Icon="icon.png">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- Header -->
            <RowDefinition Height="*"/><!-- Main Content -->
            <RowDefinition Height="Auto"/><!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Padding="32,24,32,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <!-- Game Icon -->
                    <Border Width="48" Height="48" 
                            CornerRadius="12"
                            Margin="0,0,16,0"
                            ClipToBounds="True">
                        <Image Source="icon.png" 
                               Stretch="UniformToFill"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontSize="32" FontWeight="Bold">
                            <Run Text="Classic" Foreground="{StaticResource ClassicCounterOrange}"/>
                            <Run Text="Counter" Foreground="{StaticResource ClassicCounterBlue}"/>
                        </TextBlock>
                        <TextBlock Text="Game Launcher" 
                                   FontSize="14" 
                                   FontWeight="Normal" 
                                   Foreground="{StaticResource FluentTextSecondary}" 
                                   Margin="0,-4,0,0"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Version Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock x:Name="VersionText" 
                               Text="Version 2.2.3.0" 
                               FontSize="13" 
                               FontWeight="Medium"
                               Foreground="{StaticResource FluentText}"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="by ClassicCounter Team" 
                               FontSize="11" 
                               Foreground="{StaticResource FluentTextTertiary}"
                               HorizontalAlignment="Right"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="32,24,32,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="24"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Status and Launch -->
            <Border Grid.Column="0" Style="{StaticResource FluentCardStyle}" Padding="28">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Status Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,24">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="Launcher Status" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FluentText}"/>
                        
                        <Border Grid.Column="1"
                                Background="{StaticResource FluentSurface}"
                                CornerRadius="12"
                                Padding="12,6">
                            <TextBlock x:Name="StatusIndicator"
                                       Text="â—" 
                                       FontSize="12"
                                       Foreground="{StaticResource ClassicCounterOrange}"/>
                        </Border>
                    </Grid>
                    
                    <!-- Status Messages -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource FluentSurface}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,24">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl x:Name="StatusMessagesControl">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="0,3" Margin="0,1">
                                            <TextBlock Text="{Binding Message}" 
                                                       Foreground="{Binding Color}"
                                                       TextWrapping="Wrap"
                                                       FontFamily="Cascadia Code, Consolas"
                                                       FontSize="12"
                                                       LineHeight="16"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Progress Section -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,24">
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock x:Name="ProgressText" 
                                       Grid.Column="0"
                                       Text="Ready to launch" 
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       Foreground="{StaticResource FluentText}"/>
                            
                            <TextBlock x:Name="ProgressPercentage"
                                       Grid.Column="1"
                                       Text="0%"
                                       FontSize="13"
                                       Foreground="{StaticResource FluentTextSecondary}"/>
                        </Grid>
                        
                        <ProgressBar x:Name="MainProgressBar" 
                                     Style="{StaticResource FluentProgressBar}"
                                     Value="0" 
                                     Maximum="100"/>
                    </StackPanel>
                    
                    <!-- Game Executable Section -->
                    <Border Grid.Row="3" 
                            Background="{StaticResource FluentSurface}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,24">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Game Executable"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{StaticResource FluentText}"
                                       Margin="0,0,0,8"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="GameExecutableTextBox"
                                         Grid.Column="0"
                                         Style="{StaticResource FluentTextBox}"
                                         Text="csgo.exe"
                                         ToolTip="Path to the game executable"/>
                                
                                <Button x:Name="BrowseExecutableButton"
                                        Grid.Column="2"
                                        Content="Browse..."
                                        Style="{StaticResource FluentSecondaryButton}"
                                        Padding="16,8"
                                        Click="BrowseExecutableButton_Click"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="LaunchButton" 
                                Grid.Column="0"
                                Content="ðŸš€ Launch Game" 
                                Style="{StaticResource FluentButton}"
                                Height="48"
                                FontSize="15"
                                Click="LaunchButton_Click"
                                IsEnabled="False"/>
                        
                        <Button x:Name="ValidateButton" 
                                Grid.Column="2"
                                Content="ðŸ” Validate Files" 
                                Style="{StaticResource FluentSecondaryButton}"
                                Height="48"
                                FontSize="15"
                                Click="ValidateButton_Click"/>
                    </Grid>
                </Grid>
            </Border>
            
            <!-- Right Panel - Settings and Info -->
            <ScrollViewer Grid.Column="2" 
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          PanningMode="VerticalOnly">
                <StackPanel>
                <!-- Game Information Card -->
                <Border Style="{StaticResource FluentCardStyle}" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ“ Game Information" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FluentText}" 
                                   Margin="0,0,0,16"/>
                        
                        <Border Background="{StaticResource FluentSurface}"
                                CornerRadius="6"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Game Directory" 
                                           FontSize="12" 
                                           FontWeight="Medium"
                                           Foreground="{StaticResource FluentTextSecondary}" 
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="GameDirectoryText" 
                                           Text="Loading..." 
                                           FontSize="11" 
                                           Foreground="{StaticResource FluentText}" 
                                           TextWrapping="Wrap"
                                           FontFamily="Cascadia Code, Consolas"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Launch Options Card -->
                <Border Style="{StaticResource FluentCardStyle}" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="âš™ï¸ Launch Options" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FluentText}" 
                                   Margin="0,0,0,16"/>
                        
                        <ScrollViewer MaxHeight="200" 
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <CheckBox x:Name="SkipUpdatesCheckBox" 
                                          Content="Skip updates" 
                                          Style="{StaticResource FluentCheckBox}"
                                          Margin="0,0,0,12"/>
                                <CheckBox x:Name="SkipValidationCheckBox" 
                                          Content="Skip file validation" 
                                          Style="{StaticResource FluentCheckBox}"
                                          Margin="0,0,0,12"/>
                                <CheckBox x:Name="ValidateAllCheckBox" 
                                          Content="Validate all files" 
                                          Style="{StaticResource FluentCheckBox}"
                                          Margin="0,0,0,12"/>
                                <CheckBox x:Name="DisableRPCCheckBox" 
                                          Content="Disable Discord RPC" 
                                          Style="{StaticResource FluentCheckBox}"
                                          Margin="0,0,0,12"/>
                                <CheckBox x:Name="DebugModeCheckBox" 
                                          Content="Debug mode" 
                                          Style="{StaticResource FluentCheckBox}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
                <!-- Advanced Settings Card -->
                <Border Style="{StaticResource FluentCardStyle}" Padding="24" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="ðŸ”§ Advanced Settings" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FluentText}" 
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Custom Launch Arguments" 
                                   FontSize="13" 
                                   FontWeight="Medium"
                                   Foreground="{StaticResource FluentTextSecondary}" 
                                   Margin="0,0,0,8"/>
                        
                        <TextBox x:Name="CustomArgumentsTextBox" 
                                 Height="80" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 Style="{StaticResource FluentTextBox}"
                                 VerticalContentAlignment="Top"
                                 FontFamily="Cascadia Code, Consolas"
                                 ToolTip="Enter custom command line arguments for the game"/>
                    </StackPanel>
                </Border>
                
                <!-- Links Card -->
                <Border Style="{StaticResource FluentCardStyle}" Padding="24">
                    <StackPanel>
                        <TextBlock Text="ðŸ”— Community Links" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource FluentText}" 
                                   Margin="0,0,0,16"/>
                        
                        <StackPanel>
                            <Border Background="{StaticResource FluentSurface}"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8">
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://github.com/ClassicCounter" 
                                               RequestNavigate="Hyperlink_RequestNavigate"
                                               Foreground="{StaticResource ClassicCounterBlue}"
                                               TextDecorations="None">
                                        ðŸ“‚ GitHub Repository
                                    </Hyperlink>
                                </TextBlock>
                            </Border>
                            
                            <Border Background="{StaticResource FluentSurface}"
                                    CornerRadius="6"
                                    Padding="12">
                                <TextBlock>
                                    <Hyperlink NavigateUri="https://discord.gg/classiccounter" 
                                               RequestNavigate="Hyperlink_RequestNavigate"
                                               Foreground="{StaticResource ClassicCounterBlue}"
                                               TextDecorations="None">
                                        ðŸ’¬ Discord Server
                                    </Hyperlink>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource FluentSurface}" 
                Padding="32,16"
                CornerRadius="0,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Launcher maintained by " 
                               FontSize="12" 
                               Foreground="{StaticResource FluentTextTertiary}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Ollum" 
                               FontSize="12" 
                               FontWeight="Medium"
                               Foreground="#90EE90" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" â€¢ Coded with love by " 
                               FontSize="12" 
                               Foreground="{StaticResource FluentTextTertiary}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="heapy â¤" 
                               FontSize="12" 
                               FontWeight="Medium"
                               Foreground="#F08080" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" â€¢ GUI by " 
                               FontSize="12" 
                               Foreground="{StaticResource FluentTextTertiary}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="lakehouse" 
                               FontSize="12" 
                               FontWeight="Medium"
                               Foreground="#87CEEB" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Border Grid.Column="1"
                        Background="{StaticResource FluentCard}"
                        CornerRadius="12"
                        Padding="12,6">
                    <TextBlock x:Name="StatusFooterText" 
                               Text="Ready" 
                               FontSize="11" 
                               FontWeight="Medium"
                               Foreground="{StaticResource FluentTextSecondary}"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
